<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2"
    android:weightSum="10"
    tools:cext="com.example.tiki.unispace_app.MainActivity">




    <RelativeLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <TextView
            android:id="@+id/app_name"
            android:text="UNISPACE"
            android:textSize="60sp"
            android:fontFamily="@font/amiko"
            android:textColor="#50444444"
            android:shadowColor="@android:color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    
    <GridLayout
    android:id="@+id/mainGrid"
    android:columnCount="2"
    android:rowCount="2"
    android:alignmentMode="alignMargins"
    android:columnOrderPreserved="false"
    android:layout_weight="6"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:padding="14dp">

        <android.support.v7.widget.CardView
            android:id="@+id/all_classrooms_item"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#50444444"
            >
            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amiko"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="-5"
                    android:shadowDy="-5"
                    android:shadowRadius="4"
                    android:text="FIND ALL CLASSROOMS"
                    android:textAlignment="center"
                    android:textColor="	#F5F5DC"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/search_by_building"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#50444444"
            >
            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amiko"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="-5"
                    android:shadowDy="-5"
                    android:shadowRadius="4"
                    android:text="SEARCH BY BUILDING"
                    android:textAlignment="center"
                    android:textColor="	#F5F5DC"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/nearest"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#50444444"
            >
            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amiko"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="-5"
                    android:shadowDy="-5"
                    android:shadowRadius="4"
                    android:text="FIND NEAREST CLASSROOM"
                    android:textAlignment="center"
                    android:textColor="	#F5F5DC"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/view_current"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#50444444"
            >
            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amiko"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="-5"
                    android:shadowDy="-5"
                    android:shadowRadius="4"
                    android:text="VIEW MY CLASSROOM"
                    android:textAlignment="center"
                    android:textColor="	#F5F5DC"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>











    </GridLayout>


