        <android.support.v7.widget.CardView
            android:id="@+id/search"
            style="@style/card_View"
            app:cardBackgroundColor="@color/main_green"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <LinearLayout
