                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    style="@style/Main_Text"
                    android:text="2"
                    android:textAlignment="center"
                    android:textSize="20sp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
